    <declare-styleable name="StandardTextLayout">
        <attr name="label" format="reference" />
        <attr name="labelColor" format="reference" />
        <attr name="hint" format="reference" />
        <attr name="android:imeOptions"  />
        <attr name="android:inputType"  />
