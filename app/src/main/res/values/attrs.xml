    <declare-styleable name="HomeBannerViewPagerIndicator">
        <attr name="currentPageColor" format="color"/>
        <attr name="simpleindicatorColor" format="color"/>
        <attr name="animation" format="enum">
            <enum name="none" value="0"/>
            <enum name="slide" value="1"/>
            <enum name="fade" value="2"/>
        </attr>
        <attr name="android:gravity" />
        <attr name="android:layout_gravity" />
    </declare-styleable>

    <declare-styleable name="Theme">
        <attr name="IndicatorStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ShimmerLayout">
        <attr name="shimmer_color" format="color|reference"/>
        <attr name="shimmer_animation_duration" format="integer|reference"/>
        <attr name="shimmer_auto_start" format="boolean|reference"/>
        <attr name="shimmer_angle" format="integer|reference"/>
        <attr name="shimmer_mask_width" format="float|reference"/>
        <attr name="shimmer_gradient_center_color_width" format="float|reference"/>
        <attr name="shimmer_reverse_animation" format="boolean|reference"/>
    </declare-styleable>

    <declare-styleable name="ExtrmLinePageIndicator">
        <!-- Whether or not the selected indicator fades. -->
        <attr name="fades" format="boolean" />
        <!-- Length of the delay to fade the indicator. -->
        <attr name="fadeDelay" format="integer" />
        <!-- Length of the indicator fade to transparent. -->
        <attr name="fadeLength" format="integer" />
        <!-- Color of the selected line that represents the current page. -->
        <!--<attr name="selectedColor" />-->
        <!-- View background -->
        <attr name="android:background"/>
        <!-- Move Animation Enabled. -->
        <attr name="moveAnim" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SelectableRoundImageView">
        <attr name="left_bottom_radius" format="dimension"/>
        <attr name="left_top_radius" format="dimension"/>
        <attr name="right_bottom_radius" format="dimension"/>
        <attr name="right_top_radius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ImageLoadView" parent="SelectableRoundImageView">
        <attr name="left_bottom_radius" />
        <attr name="left_top_radius" />
        <attr name="right_bottom_radius" />
        <attr name="right_top_radius" />

        <attr name="errorText" format="string" />
        <attr name="errorTextColor" format="color|reference" />
        <attr name="errorTextStyle" format="reference" />

        <attr name="circleType" format="boolean" />

        <attr name="android:scaleType" />
    </declare-styleable>

    <declare-styleable name="TextInputLayout">
        <!-- The text to display as placeholder text in the text input area. -->
        <attr name="placeholderText" format="string"/>
    </declare-styleable>

